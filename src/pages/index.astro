---
import { getCollection } from 'astro:content';
const allCards = await getCollection('blog');
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Odes & Codes</title>
    <style is:global>
        :root {
            --bg: #e8e4d9;
            --card-bg: #f4f1e6;
            --grid-line: rgba(82, 101, 85, 0.12);
            --accent: #4a5d4e;
            --text: #2c2c2c;
            --border: rgba(0, 0, 0, 0.1);
        }

        body { 
            background-color: var(--bg); 
            color: var(--text); 
            font-family: "Courier", "Courier New", monospace;
            margin: 0; 
            padding: 60px 20px;
        }

        /* Paper Grain Overlay */
        body::after {
            content: "";
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            pointer-events: none;
            filter: url(#noise);
            z-index: 9999;
            opacity: 0.4;
        }

        /* FRONT AND CENTER TITLE */
        header {
            width: 100%;
            text-align: center;
            margin-bottom: 80px;
        }

        header h1 { 
            font-size: 1.5rem; 
            letter-spacing: 15px; 
            color: var(--accent); 
            text-transform: uppercase; 
            margin: 0 auto;
            display: inline-block;
            border-bottom: 2px solid var(--accent);
            padding-bottom: 15px;
        }

        .layout-grid {
            max-width: 1000px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 300px 1fr;
            gap: 40px;
        }

        @media (max-width: 850px) {
            .layout-grid { grid-template-columns: 1fr; }
            header h1 { font-size: 1.1rem; letter-spacing: 8px; }
        }

/* 1. Default state (Mobile first): Not sticky */
        .sidebar { 
            position: relative; 
            top: auto; 
            height: auto; 
        }

        /* 2. Desktop state: Sticky only on large screens */
        @media (min-width: 851px) {
            .layout-grid {
                display: grid;
                grid-template-columns: 300px 1fr;
                gap: 40px;
            }
            .sidebar { 
                position: sticky; 
                top: 40px; 
                height: fit-content; 
            }
        }

        /* 3. Mobile adjustments */
        @media (max-width: 850px) {
            .layout-grid { 
                display: block; /* Stack vertically */
            }
            header {
                margin-bottom: 30px;
            }
            header h1 {
                font-size: 1.1rem;
                letter-spacing: 6px;
            }
            .sidebar {
                margin-bottom: 40px; /* Space between About and the first card */
            }
        }
        .card {
            background-color: var(--card-bg);
            background-image: 
                linear-gradient(var(--grid-line) 1px, transparent 1px),
                linear-gradient(90deg, var(--grid-line) 1px, transparent 1px);
            background-size: 20px 20px;
            border: 1px solid var(--border);
            padding: 30px;
            margin-bottom: 30px;
            position: relative;
            box-shadow: 2px 2px 0px rgba(0,0,0,0.05);
        }

        .card::after {
            content: "";
            position: absolute;
            top: 0; left: 35px; width: 1px; height: 100%;
            background-color: rgba(180, 0, 0, 0.1);
        }

        h2 { font-size: 0.9rem; text-decoration: underline; margin-top: 0; margin-bottom: 15px; }
        
        .post-body { font-size: 1rem; line-height: 1.5; white-space: pre-wrap; margin-bottom: 20px; z-index: 10; position: relative; }
        .caption { font-size: 0.75rem; font-weight: bold; border-top: 1px dashed var(--border); padding-top: 10px; color: var(--accent); }

        footer {
            grid-column: 1 / -1;
            text-align: center;
            font-size: 0.75rem;
            color: #7d7d7d;
            margin-top: 80px;
            padding: 40px;
            border-top: 1px solid var(--border);
        }
    </style>
</head>
<body>
    <header>
        <h1>ODES & CODES</h1>
    </header>

    <div class="layout-grid">
        <aside class="sidebar">
            <div class="card">
                <h2>ABOUT PROJECT</h2>
                <div class="post-body">
                    A digital ledger of technical experiments and poetic fragments. 
                    Built on Astro, served via Caddy on AWS, and mirrored on Cloudflare. 
                </div>
            </div>
        </aside>

       <main class="stream">
    {allCards.map(post => (
        <article class="card">
            <div class="post-body">{post.body}</div>
            <div class="caption">// {post.data.description}</div>
        </article>
    ))}
</main>

        <footer>
            <p>Â© 2026 NEPS. ALL RIGHTS RESERVED.</p>
        </footer>
    </div>

    <svg style="display: none;">
      <filter id="noise">
        <feTurbulence type="fractalNoise" baseFrequency="0.8" numOctaves="3" stitchTiles="stitch" />
        <feColorMatrix type="saturate" values="0" />
        <feComponentTransfer><feFuncA type="linear" slope="0.05" /></feComponentTransfer>
      </filter>
    </svg>
</body>
</html>